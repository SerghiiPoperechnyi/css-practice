{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<header class="header">
    <div >
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with hero}}
<div class="hero_container">
    <div class="hero">
        <div class="hero_content">
            {{> hero}}
        </div>
        <div class="hero_slider">
            <div class="hero_slider_icon hero_slider_left"> < </div>
                <img src="{{photo}}" alt="Hero image" class="hero_image">
            <div class="hero_slider_icon hero_slider_right"> > </div>
        </div>
    </div>
</div>
{{/with}}

{{!-- <div class="modal">
    {{hero.text}} {{hero.text}}
    <div class="modal_text">{{hero.text}} {{hero.text}}</div>
</div> --}}

<main class="blog">
    {{#each blog}}
        {{> cardBlock data=this}}
    {{/each}}
</main>
{{#with form}}
    <div class="form">
        <div class="form_content">
            <h3 class="form_title">{{title}}</h3>
            <p class="form_info">{{info}}<span class="ex">x</span></p>
        </div>
        <div class="form_action">
            <a href="{{href}}" class="button form_button">{{button}}</a>
        </div>
    </div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>
<div class="test">Test</div>


{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<header class="header">
    <div >
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <div class="info_text">{{description}}</div>
        </div>
        {{!-- <span class="msg_day">{{day}}</span>
        <a href="#" class="messages_link">All messages</a> --}}
    {{/with}}
    {{#with form}}
        <form class="form">
            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{text}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}"/>
                {{/each}}
            </div>
            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>
            <button type="submit" class="form_button">{{button}}</button>
            {{> divider}}
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}    
        <div class="updates_title">{{title}}</div>
        {{#each list}}
        <div class="upd">
            <div class="upd_icon {{#if @first}}upd_icon_1{{else}}upd_icon_2{{/if}} {{#if @last}}upd_icon_3{{/if}}"></div>
            <div class="upd_description">
                <div class="updates_nickname">{{nickname}}</div>
                <div class="updates_description">{{description}}</div>
            </div>
        </div>
        {{/each}}
        <a href="{{show_all.url}}" class="upd_link">{{show_all.text}}</a>
    {{/with}}
</div>

{{#with expirience}} 
    <div class="expirience">
        <span class="exp_badge">{{badge}}</span>
        <h2 class="exp_title">{{title}}</h2>
        <div>
        {{#each list}}
            <div class="exp_card">
                <strong>{{name}}</strong>
                <p>{{details}}</p>
            </div>
        {{/each}}
       </div>
    </div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>


